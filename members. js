export async function loadMembers() {
  const list = document.getElementById("membersList");
  if (!list) return;

  list.innerHTML = "";

  try {
    const q = query(collection(db, "members"), orderBy("createdAt", "desc"));
    const snap = await getDocs(q);

    snap.forEach((docSnap) => {
      const data = docSnap.data();
      const item = renderMemberItem(data);
      if (item) list.appendChild(item);
    });

    if (!list.children.length) {
      list.innerHTML = "<p>Ù„Ø§ ØªÙˆØ¬Ø¯ Ø¨ÙŠØ§Ù†Ø§Øª Ø£Ø¹Ø¶Ø§Ø¡.</p>";
    }

    document.dispatchEvent(new CustomEvent("members-loaded"));

  } catch (err) {
    console.error(err);
    list.innerHTML = "<p>ØªØ¹Ø°Ø± ØªØ­Ù…ÙŠÙ„ Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ø£Ø¹Ø¶Ø§Ø¡.</p>";
  }
}

