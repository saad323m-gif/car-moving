export async function loadCustody() {
  const list = document.getElementById("custodyList");
  if (!list) return;

  list.innerHTML = "";

  try {
    const q = query(collection(db, "custody"), orderBy("createdAt", "desc"));
    const snap = await getDocs(q);

    snap.forEach((docSnap) => {
      const data = docSnap.data();
      const item = renderCustodyItem(docSnap.id, data);
      if (item) list.appendChild(item);
    });

    if (!list.children.length) {
      list.innerHTML = "<p>Ù„Ø§ ØªÙˆØ¬Ø¯ Ø¨ÙŠØ§Ù†Ø§Øª Ø¹Ù‡Ø¯Ø©.</p>";
    }

    document.dispatchEvent(new CustomEvent("custody-loaded"));

  } catch (err) {
    console.error(err);
    list.innerHTML = "<p>ØªØ¹Ø°Ø± ØªØ­Ù…ÙŠÙ„ Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ø¹Ù‡Ø¯Ø©.</p>";
  }
}

