// ===============================
// Ø­Ø³Ø§Ø¨ Ø§Ù„Ø£ÙŠØ§Ù… Ø§Ù„Ù…ØªØ¨Ù‚ÙŠØ©
// ===============================

function daysLeft(dateIso) {
  if (!dateIso) return null;
  const now = new Date();
  const target = new Date(dateIso);
  const diff = target - now;
  return Math.ceil(diff / (1000 * 60 * 60 * 24));
}

