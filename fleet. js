function renderFleetUI() {
  const canManage = canManageFleet(currentUserProfile.role);

  fleetTab.innerHTML = `
    <div class="tab-inner-header">
      <h3>Ø§Ù„Ø£Ø³Ø·ÙˆÙ„</h3>
      ${
        canManage
          ? `<button id="addFleetBtn" class="btn-primary">+ Ø¥Ø¶Ø§ÙØ© Ø³ÙŠØ§Ø±Ø©</button>`
          : ""
      }
    </div>

    <div id="fleetList" class="accordion-list"></div>

    <div id="fleetFormContainer" class="hidden"></div>
  `;

  if (canManage) {
    document.getElementById("addFleetBtn").addEventListener("click", () => {
      renderFleetForm(null);
    });
  }
}

