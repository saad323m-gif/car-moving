export async function loadFleet() {
  const list = document.getElementById("fleetList");
  if (!list) return;

  list.innerHTML = "";

  try {
    const q = query(collection(db, "fleet"), orderBy("createdAt", "desc"));
    const snap = await getDocs(q);

    snap.forEach((docSnap) => {
      const data = docSnap.data();
      const item = renderFleetItem(docSnap.id, data);
      if (item) list.appendChild(item);
    });

    if (!list.children.length) {
      list.innerHTML = "<p>Ù„Ø§ ØªÙˆØ¬Ø¯ Ø³ÙŠØ§Ø±Ø§Øª ÙÙŠ Ø§Ù„Ø£Ø³Ø·ÙˆÙ„.</p>";
    }

    document.dispatchEvent(new CustomEvent("fleet-loaded"));

  } catch (err) {
    console.error(err);
    list.innerHTML = "<p>ØªØ¹Ø°Ø± ØªØ­Ù…ÙŠÙ„ Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ø£Ø³Ø·ÙˆÙ„.</p>";
  }
}

