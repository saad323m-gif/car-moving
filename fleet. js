function renderFleetForm(existing) {
  const container = document.getElementById("fleetFormContainer");
  container.innerHTML = "";
  container.classList.remove("hidden");

  const isEdit = !!existing;

  const card = document.createElement("div");
  card.className = "tab-content";

  card.innerHTML = `
    <h3>${isEdit ? "ØªØ¹Ø¯ÙŠÙ„ Ø³ÙŠØ§Ø±Ø©" : "Ø¥Ø¶Ø§ÙØ© Ø³ÙŠØ§Ø±Ø© Ø¬Ø¯ÙŠØ¯Ø©"}</h3>

    <form id="fleetForm" class="auth-form">

      <label>Ø±Ù‚Ù… Ø§Ù„Ø³ÙŠØ§Ø±Ø©</label>
      <input type="text" name="carNumber" required value="${existing?.carNumber || ""}" />

      <label>Ù†ÙˆØ¹ Ø§Ù„Ø³ÙŠØ§Ø±Ø©</label>
      <input type="text" name="carType" required value="${existing?.carType || ""}" />

      <label>ØªØ§Ø±ÙŠØ® Ø§Ù†ØªÙ‡Ø§Ø¡ Ø§Ù„ØªØ£Ù…ÙŠÙ† (YYYY-MM-DD)</label>
      <input type="date" name="insuranceExpiry" required value="${existing?.insuranceExpiry || ""}" />

      <label>ØªØ§Ø±ÙŠØ® Ø§Ù†ØªÙ‡Ø§Ø¡ Ø§Ù„ØªØ±Ø®ÙŠØµ (YYYY-MM-DD)</label>
      <input type="date" name="licenseExpiry" required value="${existing?.licenseExpiry || ""}" />

      <label>Ù…Ù„Ø§Ø­Ø¸Ø§Øª</label>
      <textarea name="notes">${existing?.notes || ""}</textarea>

      <div style="margin-top:0.5rem; display:flex; gap:0.5rem;">
        <button type="submit" class="btn-primary">${isEdit ? "Ø­ÙØ¸ Ø§Ù„ØªØ¹Ø¯ÙŠÙ„Ø§Øª" : "Ø­ÙØ¸"}</button>
        <button type="button" id="cancelFleetForm" class="btn-secondary">Ø¥Ù„ØºØ§Ø¡</button>
      </div>
    </form>
  `;

  container.appendChild(card);

  document.getElementById("cancelFleetForm").addEventListener("click", () => {
    container.classList.add("hidden");
  });

  document.getElementById("fleetForm").addEventListener("submit", async (e) => {
    e.preventDefault();

    const data = Object.fromEntries(new FormData(e.target).entries());

    const payload = {
      carNumber: data.carNumber.trim(),
      carType: data.carType.trim(),
      insuranceExpiry: data.insuranceExpiry,
      licenseExpiry: data.licenseExpiry,
      notes: data.notes.trim()
    };

    try {
      if (isEdit) {
        await updateDoc(doc(db, "fleet", existing.id), payload);
      } else {
        await addDoc(collection(db, "fleet"), {
          ...payload,
          createdAt: serverTimestamp()
        });
      }

      container.classList.add("hidden");
      await loadFleet();

    } catch (err) {
      console.error(err);
      alert("Ø­Ø¯Ø« Ø®Ø·Ø£ Ø£Ø«Ù†Ø§Ø¡ Ø­ÙØ¸ Ø¨ÙŠØ§Ù†Ø§Øª Ø§Ù„Ø³ÙŠØ§Ø±Ø©.");
    }
  });
}

